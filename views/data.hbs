<div class="sidebar">
    <div class="top">
        <div class="logo">
            <img id="logo-mini" src="./logo.png" alt="logo"/>
            <span>HIV Advocacy Database (HAD)</span>
        </div>
        <i class="bx bx-menu" id="btn"></i>
    </div>
    
    <ul>
        <li>
            <a href="/dashboard">
                <i class="bx bxs-grid-alt"></i>
                <span class="nav-item">Dashboard</span>
            </a>
            <span class="tooltip">Dashboard</span>
        </li>
        <li>
            <a href="/tracker">
                <i class="bx bxs-pencil"></i>
                <span class="nav-item">Data Tracker</span>
            </a>
            <span class="tooltip">Data Tracker</span>
        </li>
        <li class="active">
            <a href="/data">
                <i class="bx bx-table"></i>
                <span class="nav-item">Data Log</span>
            </a>
            <span class="tooltip">Data Log</span>
        </li>
        <li>
            <a href="/profile">
                <i class="bx bxs-user"></i>
                <span class="nav-item">Profile</span>
            </a>
            <span class="tooltip">Profile</span>
        </li>
        <li>
            <a href="/history">
                <i class="bx bx-list-ul"></i>
                <span class="nav-item">History Log</span>
            </a>
            <span class="tooltip">History Log</span>
        </li>
        <li>
            <a href="/logout">
                <i class="bx bxs-log-out"></i>
                <span class="nav-item">Logout</span>
            </a>
            <span class="tooltip">Logout</span>
        </li>
    </ul>

    <div class="user">
        <img src="./gabay-logo.jpeg" alt="gabay org" class="user-img">
        <div class="div">
            <p class="bold">{{user.name}}</p>
            <p>{{user.role}}</p>
        </div>
    </div>
</div>

<div class="main-content">
    <div class="header">
        <h1>Data Log</h1>
    </div>
    
    <div class="container-for-data">
        <h2 class="headline">Biomedical Records</h2>
        <table class="data-log">
            <thead>
                <tr>
                    <th>Gender</th>
                    <th>Location</th>
                    <th>Barangay</th>
                    <th>Remarks</th>
                    <th>Age Range</th>
                    <th>Tested Before</th>
                    <th>Test Result</th>
                    <th>Reason</th>
                    <th>KVP</th>
                    <th>Linkage</th>
                    <th>Encoder</th>
                    <th>Date Encoded</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each biomedicalPatients}}
                <tr>
                    <td>{{gender}}</td>
                    <td>{{location}}</td>
                    <td>{{barangay}}</td>
                    <td>{{remarks}}</td>
                    <td>{{age_range}}</td>
                    <td>{{tested_before}}</td>
                    <td>{{test_result}}</td>
                    <td>{{reason}}</td>
                    <td>{{kvp}}</td>
                    <td>{{linkage}}</td>
                    <td>{{encoder}}</td>
                    <td>{{formatDate date_encoded}}</td>
                    <td>
                        <a href="/edit/{{_id}}" class="btn-edit"><i class="bx bxs-pencil"></i></a>
                        <a href="/delete/{{_id}}" class="btn-delete"><i class="bx bxs-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="container-for-data">
        <h2 class="headline">Nonbiomedical Records</h2>
        <table class="data-log">
            <thead>
                <tr>
                    <th>Gender</th>
                    <th>Stigma</th>
                    <th>Discrimination</th>
                    <th>Violence</th>
                    <th>Encoder</th>
                    <th>Date Encoded</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each nonBiomedicalPatients}}
                <tr>
                    <td>{{gender}}</td>
                    <td>{{stigma}}</td>
                    <td>{{discrimination}}</td>
                    <td>{{violence}}</td>
                    <td>{{encoder}}</td>
                    <td>{{formatDate date_encoded}}</td>
                    <td>
                        <a href="/edit/{{_id}}" class="btn-edit"><i class="bx bxs-pencil"></i></a>
                        <a href="/delete/{{_id}}" class="btn-delete"><i class="bx bxs-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="footer">
        <p>&copy; 2024 HIV Advocacy Database. All rights reserved.</p>
    </div>
</div>