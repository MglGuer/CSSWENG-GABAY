<div class="parent-registration">
    <!-- left section : image -->
    <div class="leftSide">
        <div class="img">
            <img class="logo" src="./logo.png" alt="logo"/>
        </div>
    </div>
    
    <!-- right section : form -->
    <div class="rightSide">
        <p class="main"><b>Forgot Password?</b></p>
        <p class="details">Enter New Password</p>
        
        <form name="read-user" action="read-user" method="post">
            <div class="form-group">
                <input name="email" id="email-field" type="text" placeholder="Email" required></input>
            </div>
            <div class="form-group">
                <input name="password" id="password-field" type="password" placeholder="Enter New Password" minlength="8" required></input>
            </div>
            <div class="form-group">
                <input name="password" id="password-field" type="password" placeholder="Confirm New Password" minlength="8" required></input>
            </div>
            
            <input type="submit" class="registration" value="Change Password"></input>
        </form>
        <p class="signup-page">Already have an account? <a class="register" href="/">Log in</a></p>
        <p class="signup-page">New here? <a class="register" href="/signup">Create an account</a></p>
    </div>
</div>