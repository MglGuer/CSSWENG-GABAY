<div class="sidebar">
    <div class="top">
        <div class="logo">
            <img id="logo-mini" src="./logo.png" alt="logo"/>
            <span>HIV Advocacy Database (HAD)</span>
        </div>
        <i class="bx bx-menu" id="btn"></i>
    </div>
    
    <ul>
        <li>
            <a href="/dashboard">
                <i class="bx bxs-grid-alt"></i>
                <span class="nav-item">Dashboard</span>
            </a>
            <span class="tooltip">Dashboard</span>
        </li>
        {{#if (or (eq user.role "Data Encoder") (eq user.role "Data Manager"))}}
        <li>
            <a href="/tracker">
                <i class="bx bxs-pencil"></i>
                <span class="nav-item">Data Tracker</span>
            </a>
            <span class="tooltip">Data Tracker</span>
        </li>
        {{/if}}
        {{#if (eq user.role "Data Manager")}}
        <li>
            <a href="/data">
                <i class="bx bx-table"></i>
                <span class="nav-item">Data Log</span>
            </a>
            <span class="tooltip">Data Log</span>
        </li>
        {{/if}}
        <li>
            <a href="/profile">
                <i class="bx bxs-user"></i>
                <span class="nav-item">Profile</span>
            </a>
            <span class="tooltip">Profile</span>
        </li>
        {{#if (eq user.role "Data Manager")}}
        <li class="active">
            <a href="/history">
                <i class="bx bx-list-ul"></i>
                <span class="nav-item">History Log</span>
            </a>
            <span class="tooltip">History Log</span>
        </li>
        {{/if}}
        <li>
            <a href="/logout">
                <i class="bx bxs-log-out"></i>
                <span class="nav-item">Logout</span>
            </a>
            <span class="tooltip">Logout</span>
        </li>
    </ul>

    <div class="user">
        <img src="./gabay-logo.jpeg" alt="gabay org" class="user-img">
        <div class="div">
            <p class="bold">{{user.name}}</p>
            <p>{{user.role}}</p>
        </div>
    </div>
</div>

<div class="main-content">
    <div class="header">
        <h1>History Log</h1>
    </div>
    
    <div class="container-for-loginhistory">
        <h2 class="headline">Login History</h2>
        <table class="history-log">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>ROLE</th>
                    <th>EMAIL ADDRESS</th>
                    <th>LAST LOGIN DATE/TIME</th>
                </tr>
            </thead>
            <tbody>
                {{#each loginHistory}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.role}}</td>
                    <td>{{this.email}}</td>
                    <td>{{formatDate this.lastLoginDateTime}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="container-for-actionhistory">
        <h2 class="headline">Action History</h2>
        <table class="history-log">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>ROLE</th>
                    <th>EMAIL ADDRESS</th>
                    <th>ACTION</th>
                    <th>ACTION DATE/TIME</th>
                </tr>
            </thead>
            <tbody>
                {{#each actionHistory}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.role}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.action}}</td>
                    <td>{{formatDate this.actionDateTime}}</td> 
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="footer">
        <p>&copy; 2024 HIV Advocacy Database. All rights reserved.</p>
    </div>
</div>